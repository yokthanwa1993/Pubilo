{
  "framework": null,
  "buildCommand": "echo 'No build needed'",
  "installCommand": "echo 'Skip install'",
  "outputDirectory": "public",
  "regions": ["sin1"],
  "crons": [
    {
      "path": "/api/cron-auto-post",
      "schedule": "* * * * *"
    },
    {
      "path": "/api/auto-hide",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cron-earnings?notify=true",
      "schedule": "0 11 * * *"
    }
  ],
  "functions": {
    "api/upload-image.ts": {
      "maxDuration": 60
    },
    "api/publish.ts": {
      "maxDuration": 60
    },
    "api/page-settings.ts": {
      "memory": 128
    },
    "api/cron-auto-post.ts": {
      "maxDuration": 60
    }
  },
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api/:path*" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
